<!-- views/pages/about.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
      <% include ../partials/head %>
  </head>

  <body>
    <div class="navbar-wrapper">
      <header class="container">
        <% include ../partials/header %>
      </header>
    </div>

    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing">
      <h2 class="text-center">Welcome to ballsonmychin.com</h2>
      <p>This site was made in memory of all the POON LANs ever held.</p>
      <p>&nbsp;</p>
      <!-- Three columns of text below the carousel -->

      <div class="row">
        <div class="col-lg-12">
          <img class="img-circle" src="/img/<%= Math.round(Math.random() * (max - min) + min); %>.jpg" alt="Costner: Fighter" width="250" height="250">
          <h3>Random Costner Quote:</h3>
          <p><i>"<%= quotes[(Math.round(Math.random() * (max_quotes - min_quotes) + min_quotes)-1)]; %>"</i></p>
        </div>
      </div>

      <hr class="featurette-divider">

      <!-- /END THE FEATURETTES -->

      <!-- FOOTER -->
      <footer>
        <% include ../partials/footer %>
      </footer>

    </div><!-- /.container -->

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="/assets/js/vendor/jquery.min.js"><\/script>')</script>
    <script src="/js/bootstrap.min.js"></script>
    <!-- Just to make our placeholder images work. Don't actually copy the next line! -->
    <script src="/assets/js/vendor/holder.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/assets/js/ie10-viewport-bug-workaround.js"></script>
  </body>
</html>
